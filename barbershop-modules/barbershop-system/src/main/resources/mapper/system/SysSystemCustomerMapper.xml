<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.barbershop.system.mapper.SysSystemCustomerMapper">

    <resultMap type="SysSystemCustomer" id="SysSystemCustomerResult">
        <result property="customerId"    column="customer_id"    />
        <result property="customerDeptId"    column="customer_dept_id"    />
        <result property="customerName"    column="customer_name"    />
        <result property="nickName"    column="nick_name"    />
        <result property="sex"    column="sex"    />
        <result property="age"    column="age"    />
        <result property="birthday"    column="birthday"    />
        <result property="customerAccountBalance"    column="customer_account_balance"    />
        <result property="perferences"    column="perferences"    />
        <result property="email"    column="email"    />
        <result property="phonenumber"    column="phonenumber"    />
        <result property="customerAccountStatus"    column="customer_account_status"    />
        <result property="customerAccountLevel"    column="customer_account_level"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysSystemCustomerVo">
        select customer_id, customer_dept_id, customer_name, nick_name, sex, age, birthday, customer_account_balance, perferences, email, phonenumber, customer_account_status, customer_account_level, create_by, create_time, update_by, update_time, remark from sys_system_customer
    </sql>

    <select id="selectSysSystemCustomerList" parameterType="SysSystemCustomer" resultMap="SysSystemCustomerResult">
        <include refid="selectSysSystemCustomerVo"/>
        <where>
            <if test="nickName != null  and nickName != ''"> and nick_name like concat('%', #{nickName}, '%')</if>
            <if test="phonenumber != null  and phonenumber != ''"> and phonenumber = #{phonenumber}</if>
            <if test="customerAccountStatus != null  and customerAccountStatus != ''"> and customer_account_status = #{customerAccountStatus}</if>
            <if test="customerAccountLevel != null  and customerAccountLevel != ''"> and customer_account_level = #{customerAccountLevel}</if>
        </where>
    </select>

    <select id="selectSysSystemCustomerByCustomerId" parameterType="Long" resultMap="SysSystemCustomerResult">
        <include refid="selectSysSystemCustomerVo"/>
        where customer_id = #{customerId}
    </select>

    <insert id="insertSysSystemCustomer" parameterType="SysSystemCustomer" useGeneratedKeys="true" keyProperty="customerId">
        insert into sys_system_customer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="customerDeptId != null">customer_dept_id,</if>
            <if test="customerName != null and customerName != ''">customer_name,</if>
            <if test="nickName != null and nickName != ''">nick_name,</if>
            <if test="sex != null">sex,</if>
            <if test="age != null">age,</if>
            <if test="birthday != null">birthday,</if>
            <if test="customerAccountBalance != null">customer_account_balance,</if>
            <if test="perferences != null">perferences,</if>
            <if test="email != null">email,</if>
            <if test="phonenumber != null">phonenumber,</if>
            <if test="customerAccountStatus != null">customer_account_status,</if>
            <if test="customerAccountLevel != null">customer_account_level,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="customerDeptId != null">#{customerDeptId},</if>
            <if test="customerName != null and customerName != ''">#{customerName},</if>
            <if test="nickName != null and nickName != ''">#{nickName},</if>
            <if test="sex != null">#{sex},</if>
            <if test="age != null">#{age},</if>
            <if test="birthday != null">#{birthday},</if>
            <if test="customerAccountBalance != null">#{customerAccountBalance},</if>
            <if test="perferences != null">#{perferences},</if>
            <if test="email != null">#{email},</if>
            <if test="phonenumber != null">#{phonenumber},</if>
            <if test="customerAccountStatus != null">#{customerAccountStatus},</if>
            <if test="customerAccountLevel != null">#{customerAccountLevel},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateSysSystemCustomer" parameterType="SysSystemCustomer">
        update sys_system_customer
        <trim prefix="SET" suffixOverrides=",">
            <if test="customerDeptId != null">customer_dept_id = #{customerDeptId},</if>
            <if test="customerName != null and customerName != ''">customer_name = #{customerName},</if>
            <if test="nickName != null and nickName != ''">nick_name = #{nickName},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="age != null">age = #{age},</if>
            <if test="birthday != null">birthday = #{birthday},</if>
            <if test="customerAccountBalance != null">customer_account_balance = #{customerAccountBalance},</if>
            <if test="perferences != null">perferences = #{perferences},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phonenumber != null">phonenumber = #{phonenumber},</if>
            <if test="customerAccountStatus != null">customer_account_status = #{customerAccountStatus},</if>
            <if test="customerAccountLevel != null">customer_account_level = #{customerAccountLevel},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where customer_id = #{customerId}
    </update>

    <delete id="deleteSysSystemCustomerByCustomerId" parameterType="Long">
        delete from sys_system_customer where customer_id = #{customerId}
    </delete>

    <delete id="deleteSysSystemCustomerByCustomerIds" parameterType="String">
        delete from sys_system_customer where customer_id in
        <foreach item="customerId" collection="array" open="(" separator="," close=")">
            #{customerId}
        </foreach>
    </delete>
</mapper>